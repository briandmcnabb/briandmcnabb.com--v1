- title "About"

- present resource do |present_user|
	%section.clearfix[resource]
		%p
			= present_user.description
		%footer
			%figure
				= present_user.avatar
			= link_to 'resume', resource.resume.asset_path_url, class: 'resume' if resource.resume
			#social_buttons
			  - resource.connections.each do |connection|
				  = link_to connection.username, target: '_blank' do
				  	= image_tag "#{connection.provider}.png", size: "48x48"
				= link_to 'http://dribbble.com/briandmcnabb', target: '_blank' do
					= image_tag 'dribbble.png', size: '48x48'
			= twitter_feed