- present client do |present_client|
  %article[client]
    %header
      = link_to '#', :class => 'expand' do
        = present_client.logo
      %ul.services
        .center_vertically
          - client.services.each do |service|
            %li
              = image_tag service.service_symbol.asset_path_url(:thumb), size: "18x18"
              = service.name
    %section.content
      .content-wrapper
        = present_client.organization
        = present_client.description
        - if client.images.present?
          #gallery.horizontal
            %ul
              - client.images.order("created_at").each do	|image|
                %li= link_to image_tag(image.asset_path_url(:preview), alt: image.description), image.asset_path_url
        = present_client.website
        = link_to 'close', '#', :class => 'collapse ir'