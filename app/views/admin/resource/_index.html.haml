%section.clearfix
	%table.backend
		- attributes.each do |attr|
			%col{ id: "#{attr}" }
		%thead
			%tr
				- attributes.each do |attr|
					%th= resource_class.human_attribute_name(attr)
				%th &nbsp;
				%th &nbsp;
				%th &nbsp;
				= content_tag(:th, ('&nbsp;').html_safe) if resource_class.attribute_names.include?('position')
		%tbody#sortable{ :data => {:sort_url => url_for(action: 'sort', controller: params[:controller], only_path: false)} }
			- collection.each do |resource|
				%tr[resource]{odd_or_even}
					- attributes.each do |attr|
						%td= attr.end_with?('_id') ? resource.public_send(attr.gsub('_id', '')).to_s : resource.public_send(attr).to_s.truncate(20)
					%td.icon_link
						= link_to 'show', resource_path(resource), :class => 'show ir'
					%td.icon_link                          		
						= link_to 'edit', edit_resource_path(resource), :class => 'edit ir'
					%td.icon_link
						= link_to 'destroy', resource_path(resource), :method => :delete, confirm: "Are you sure?", :class => 'destroy ir'
					- if resource_class.attribute_names.include?('position')
						%td.icon_link
							.handle.ir= "[drag]"

	= will_paginate collection